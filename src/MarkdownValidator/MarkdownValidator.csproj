<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <RootNamespace>MihaZupan.MarkdownValidator</RootNamespace>
    <AssemblyName>MarkdownValidator</AssemblyName>
    <LangVersion>7.2</LangVersion>
    <Authors>MihaZupan</Authors>
    <Company>MihaZupan</Company>
    <Copyright>Copyright Â© Miha Zupan 2018</Copyright>
    <PackageLicenseUrl>https://raw.githubusercontent.com/MihaZupan/MarkdownValidator/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/MihaZupan/MarkdownValidator</PackageProjectUrl>
    <RepositoryUrl>https://github.com/MihaZupan/MarkdownValidator.git</RepositoryUrl>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>Extensible library for markdown analysis and validation.</Description>
    <PackageTags>markdown;markdown-parser;validation;documentation;documentation-tool</PackageTags>
    <Version>1.3.0</Version>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <PlatformTarget>AnyCPU</PlatformTarget>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Markdig" Version="0.15.7" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.1" />
  </ItemGroup>

</Project>
